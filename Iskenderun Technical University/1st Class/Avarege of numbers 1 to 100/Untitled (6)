#include<iostream>
#include<cmath>
using namespace std;
class Matematik
{
	public:
	double Hesapla(double kenar1,double kenar2,double aci)
	{
		double kenar3=pow(kenar1,2)+pow(kenar2,2)-(2*kenar1*kenar2*cos((aci*3.14)/180));
		
		return sqrt(kenar3);
	}
};
int main ()
{
	Matematik costeo;
	
	cout<<costeo.Hesapla(3,4,90);
}